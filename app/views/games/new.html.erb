<h1>Welcome to the Longest Word Game!</h1>
<ul class="list-group list-group-horizontal mt-5">
  <% @letters.each do |letter| %>
    <li class="list-group-item me-2 ms-2 badge bg-primary text-white"><%= letter.capitalize %></li>
  <% end %>
</ul>

<p class="form-prefix mt-5">What is the longest word you can find?</p>

<form class="mt-5" action="/score" method="POST" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <div class="input-group">
    <input type="text" class="form-control" name="word">
    <input type="submit" value="Play" class="btn btn-primary">
  </div>
</form>


